{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "settings": {
    "import/resolver":{
      "babel-module":{
        "config":{
          "root": ["./src", "."]
        }
      }
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "plugins": ["flowtype"],
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-unused-vars": ["error", {"argsIgnorePattern": "^_"}],
    "no-console": ["error", { "allow": ["warn", "error", "info"] }],
    "indent": ["error", 2],
    "react/jsx-filename-extension": 0,
    "no-underscore-dangle": 0
  }
}
